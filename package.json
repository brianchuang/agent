{
  "name": "agent-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "worker": "node --env-file=.env.local --import tsx apps/agent-runner/src/index.ts",
    "worker:once": "WORKER_RUN_ONCE=1 node --env-file=.env.local --import tsx apps/agent-runner/src/index.ts",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:migrate": "npm run db:migrate --workspace @agent/observability",
    "db:rollback": "npm run db:rollback --workspace @agent/observability",
    "db:status": "npm run db:status --workspace @agent/observability"
  },
  "devDependencies": {
    "turbo": "^2.4.2"
  },
  "packageManager": "npm@10.9.2"
}
